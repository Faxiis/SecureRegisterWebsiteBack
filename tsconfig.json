{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "types": [
      "jest",
      "node"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    //"rootDir": "./src",
    //"outDir": "./dist",
    //"module": "nodenext",
    //"moduleResolution": "nodenext",
    //"target": "esnext",
    //"types": [
    //  "jest",
    //  "node"
    //],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    //"skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}